<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
  <display-name>Poll</display-name>
  <config>
    <input type="ContentSelector" name="poll">
      <label>Poll</label>
      <help-text>Select the poll content to show here</help-text>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <relationship>system:reference</relationship>
        <allowType>poll</allowType>
        <allowPath>${site}/*</allowPath>
      </config>
    </input>
    <input type="TextLine" name="heading">
      <label>Heading (optional)</label>
      <help-text>Will appear above the question</help-text>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </config>
</part>