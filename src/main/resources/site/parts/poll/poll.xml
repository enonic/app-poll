<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
  <display-name>Poll</display-name>
  <config>
    <input type="ContentSelector" name="poll">
      <label>Poll</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <relationship>system:reference</relationship>
        <allowType>Poll</allowType>
        <allowPath>${site}/*</allowPath>
      </config>
    </input>
    <input type="CheckBox" name="excludeCSS">
      <label>Use custom styling</label>
    </input>
    <input type="TextLine" name="containerClass">
      <label>Add CSS class to poll container</label>
    </input>
  </config>
</part>