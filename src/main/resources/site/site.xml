<?xml version="1.0" encoding="UTF-8"?>
<site>
  <config>
    <input type="RadioButton" name="pollCSS">
      <label>Poll styling</label>
      <help-text>See documentation github.com/enonic/app-poll</help-text>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="default">Use default styling</option>
        <option value="bootstrap">Use Bootstrap markup</option>
        <option value="none">None (requires custom styling)</option>
      </config>
      <default>default</default>
    </input>
    <input type="TextLine" name="containerClass">
      <label>Add CSS class to poll containers</label>
      <help-text>This could help the polls match your site without custom styling if you know what class to use.</help-text>
    </input>
  </config>
</site>
